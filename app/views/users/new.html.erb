<h1>Register</h1>
<br>
<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :username , class: 'form-label' %>
    <%= form.text_field :username, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :password , class: 'form-label' %>
    <%= form.password_field :password, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :firstname, class: 'form-label'  %>
    <%= form.text_field :firstname, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :lastname, class: 'form-label'  %>
    <%= form.text_field :lastname, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :city , class: 'form-label'  %>
    <%= form.text_field :city, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :country , class: 'form-label'  %>
    <%= form.text_field :country, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
