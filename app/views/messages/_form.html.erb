<%= form_with model: message, url: channel_messages_path(channel), local: false, html: { class: "my-4" } do |form| %>
  <div class="form-group mb-2">
    <%= form.text_area :message, placeholder: "Enter your message", class: "form-control", rows: 3 %>
  </div>

  <div class="actions">
    <%= form.submit 'Send', class: "btn btn-primary" %>
  </div>
<% end %>
