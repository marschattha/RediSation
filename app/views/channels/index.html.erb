<div id="user-data" data-user="<%= @current_user.to_json(except: 'password_digest') %>"></div>

<div class="row">
  <div class="card col-sm-3 py-3" style="height: 92vh; border: none; border-radius: 0;">
    <h1>Chats</h1>

    <%= render 'form', channel: @channel %>

    <ul id="channel-list" class="list-group channels">
      <% @channels.each do |channel| %>
        <%= render 'channel_item', channel: channel %>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-9 pt-3" id="channel">
    <%= render 'channel', channel: @channel, stream: @stream, messages: @messages, message: @message %>
  </div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">User Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <label class="user-profile-label" >
          Username:
          <%= @current_user.username %>
        </label>
        <br>
        <label class="user-profile-label" >
          First Name:
          <%= @current_user.firstname %>
        </label>
        <br>
        <label class="user-profile-label" >
          Last Name:
          <%= @current_user.lastname %>
        </label>
        <br>
        <label class="user-profile-label" >
          City:
          <%= @current_user.city %>
        </label>
        <br>
        <label class="user-profile-label" >
          Country:
          <%= @current_user.country %>
        </label>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



</div>
